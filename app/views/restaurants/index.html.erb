<div class="container">
  <h1>Restaurants</h1>
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant.id), class:"btn" do%>
        <li class="list-group-item"><%= restaurant.name %></li>
      <% end %>
    <% end %>
  </ul>
  <%= link_to "Add a restaurant", new_restaurant_path, class: "my-3 btn btn-primary" %>
</div>
